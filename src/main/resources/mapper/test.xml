<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="test">
	
	<select id="sysmon_get_server_list" parameterType="map" resultType="map">
		SELECT DEVICE_ID, DEVICE_IP, DEVICE_PORT, READ_COMMUNITY, SNMP_VERSION, SNMP_YN,
			ALARM_YN, DISP_YN, PING_YN
		FROM T_DEVICE
		WHERE USE_YN = 'Y'
	</select>
	
	<select id="sql_mysql_sleep_5" parameterType="map" resultType="map">
		select sleep(5)
	</select>
	
	<sql id="including">
		SELECT * FROM test1
	</sql>

	<select id="testsql01" parameterType="map" resultType="map">
		/*test*/
		<include refid="including" />
		where c1 = #{c1}
	</select>
	
	<select id="sql_mysql_live_01" parameterType="map" resultType="map">
		select count(*) row_cnt from test1
	</select>
	
	<select id="sql_sleep_15" parameterType="map" resultType="map">
		select sleep(15)
	</select>
	
	<select id="sql_read_test" parameterType="map">
		SELECT * FROM cs_usermaster WHERE user_id = #{user_id}
	</select>
	<insert id="sql_insert_test" parameterType="map">
		insert into tb_test (data1, data2, data3) 
		values (#{data1}, #{data2}, #{data3})
	</insert>
	
	<update id="sql_update_test" parameterType="map">
		UPDATE tb_test
			SET data2 = #{data2}
		WHERE data1 = #{data1}
	</update>
	
	<delete id="sql_delete_test" parameterType="map">
		DELETE FROM tb_test WHERE data1 = #{data1}
	</delete>
	
	<insert id="sql_insert_batch_test">
		INSERT INTO tb_test (data1, data2, data3)
		VALUES (#{data1}, #{data2}, #{data3})
	</insert>
</mapper>
